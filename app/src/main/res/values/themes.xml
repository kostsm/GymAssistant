<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Theme.HealthTracker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryColor</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <!-- Background color. -->
        <item name="android:colorBackground">@color/backgroundColor</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <!-- Customize your theme here. -->
        <item name="colorError">@color/dangerColor</item>
        <item name="colorOnError">@android:color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/primaryDarkColor</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/primaryDarkColor</item>
    </style>

